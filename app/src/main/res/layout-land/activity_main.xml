<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="fill_parent">
<TextView android:id="@+id/acknowledgement" android:layout_width="fill_parent" android:layout_height="wrap_content" android:textSize="20sp" android:text="Contains British Geological Survey materials Â©NERC 2019"/>
<TextView android:id="@+id/matric" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="Matriculation Number: S1626987" android:layout_below="@+id/acknowledgement"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mapbutton"
        android:text="Map View"
        android:layout_below="@+id/matric"/>
    <ListView
        android:id="@+id/quakelist"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mapbutton"/>

    <FrameLayout
        android:layout_width="460dp"
        android:layout_height="fill_parent"
        android:layout_toRightOf="@+id/quakelist"
        android:layout_below="@+id/acknowledgement"
        android:id="@+id/frame_layout"
        android:layout_gravity="left"/>
</RelativeLayout>
